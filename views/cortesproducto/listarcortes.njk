  </thead>
  <tbody>
    {% for corte in cortes %}
      <tr>
        <td>{{ corte.numero }}</td>
        <td>{{ corte.proveedor }}</td>
        <td>{{ corte.cantidad }}</td>
        <td>{{ corte.medida }}</td>
        <td>
          <select class="form-control estadoCorte" data-corte-id="{{ corte.numero }}">
            {% for estado in estados %}
              <option value="{{ estado }}">{{ estado }}</option>
            {% endfor %}
          </select>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

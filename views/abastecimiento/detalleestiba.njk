<div class="modal-dialog" role="document">
  <div class="modal-content modal-lg">
    <div class="modal-header">
      <h5 class="modal-title text-center mx-auto">Productos de estiba {{ estibaId }} </h5>
      <div class="form-actions">
        <button type="button" class="btn btn-secondary cancelarBtn">Cerrar</button>
      </div>
    </div>
    <div class="modal-body">
      <table id="tablaDetalle" class="table table-striped" style="width:100%">
        <thead>
          <tr>
            <th>Referencia</th>
            <th>Descripci√≥n</th>
            <th>Unidad de Empaque</th>
            <th>Cantidad</th>
            <th>Desasociar</th>
          </tr>
        </thead>
        <tbody>
          {% for detalle in detalles %}
          <tr id="{{ detalle.referencia }}">
            <td >{{ detalle.referencia }}</td>
            <td>{{ detalle.descripcion }}</td>
            <td>{{ detalle.unidad }}</td>
            <td>{{ detalle.cantidad }}</td>
            <td><i class="desasociar-icon fa-solid fa-link-slash" data-producto="{{ detalle.referencia }}"></i></td> 
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
<script src="/js/abastecimiento/detalleestiba.js"></script>

